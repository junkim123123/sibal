# NexSupply Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
# For Prisma Dev: Use the connection string from Prisma Dev
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nexsupply"

# NextAuth.js
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (Optional - only if using Google sign-in)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Provider (Optional - only if using email sign-in)
# For SMTP: smtp://user:pass@smtp.example.com:587
# For Resend: https://resend.com/api-keys
EMAIL_SERVER="smtp://user:password@smtp.example.com:587"
EMAIL_FROM="noreply@nexsupply.com"

# Google Gemini API (Required for product analysis)
GEMINI_API_KEY="AIzaSyCH_541TQTk8Coa_IBU9zM3DXhqonWKtJU"

# Resend API (Optional - for email notifications)
